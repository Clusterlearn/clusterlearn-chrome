{
   "name": "ClusterLearn",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "The best way to learn is in a group. ClusterLearn is a chrome extension that allows you to learn with your friends.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.udemy.com/cart/subscribe/course/*/.*"
      ],
      "js": [
        "src/main.tsx"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  }
}